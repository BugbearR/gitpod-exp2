{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "web stop on entry",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "stopOnEntry": true,
      "pathMappings": { "${workspaceRoot}/public": "${workspaceRoot}/public" }
    },
    {
      "name": "web non stop",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "stopOnEntry": false,
      "pathMappings": { "${workspaceRoot}/public": "${workspaceRoot}/public" }
    },
    {
      "type": "php",
      "name": "Launch",
      "request": "launch",
      "port": 9000,
      "stopOnEntry": true,
      "program": "${workspaceRoot}/www/phpinfo.php",
      "cwd": "${workspaceRoot}",
      "externalConsole": false
    },
    {
      "type": "php",
      "name": "sum",
      "request": "launch",
      "port": 9000,
      "stopOnEntry": true,
      "program": "${workspaceRoot}/www/sum.php",
      "cwd": "${workspaceRoot}",
      "externalConsole": false
    }
  ]
}
